<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".volunteer"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:padding="10sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill form to volunteer"
        android:textSize="40sp"
        android:fontFamily="@font/bungee"
        android:textColor="#000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="upload  your image "
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <ImageView
                android:id="@+id/volunteer_image"
                android:layout_marginTop="10sp"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/white_background"/>
            <Button
                android:id="@+id/volunteer_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose image "
                android:background="#000"
                android:textColor="#ffffffff"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:paddingTop="20sp"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/volunteer_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/white_background"
                android:hint="Enter your name here"
                android:layout_marginTop="5sp"
                android:inputType="textPersonName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:paddingTop="10sp"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/volunteer_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/white_background"
                android:hint="Email here"
                android:inputType="textEmailAddress"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="House Address"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/volunteer_location"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/white_background"
                android:hint="Full Address "
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Reason"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/volunteer_description"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@drawable/white_background"
                android:hint="why do you want to volunteer"
                android:inputType="textLongMessage"/>

            <Button
                android:id="@+id/volunteer_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#ffffffff"
                android:text="submit"
                android:background="#000"/>



        </LinearLayout>

    </ScrollView>




</LinearLayout>