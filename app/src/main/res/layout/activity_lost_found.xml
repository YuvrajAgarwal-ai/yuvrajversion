<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app_developement.lost_found"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/bg1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File your report here"
        android:textSize="40sp"
        android:fontFamily="@font/bungee"
        android:textColor="#000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".emergencyContacts">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:paddingTop="20sp"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/sql_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/white_background"
                android:hint="Enter your name here"
                android:layout_marginTop="5sp"
                android:inputType="textPersonName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Item"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/sql_item"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/white_background"
                android:hint="Type of item"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Last seen Date "
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/sql_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/white_background"
                android:hint="Date here"
                android:inputType="date"/>
            <Button
                android:id="@+id/sql_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Date "
                android:background="#000"
                android:textColor="#ffffffff"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="upload an image"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <ImageView
                android:id="@+id/sql_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/white_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp">
                <Button
                    android:id="@+id/sql_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="choose image "
                    android:background="#000"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10sp"/>
                <Button
                    android:id="@+id/sql_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="capture image "
                    android:background="#000"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>







            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Description"
                android:textSize="20sp"
                android:paddingTop="10sp"
                android:fontFamily="@font/antic"/>
            <EditText
                android:id="@+id/sql_description"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@drawable/white_background"
                android:hint="enter details"
                android:inputType="textLongMessage"/>

            <Button
                android:id="@+id/sql_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#ffffffff"
                android:text="submit"
                android:background="#000"/>

        </LinearLayout>


    </ScrollView>














</LinearLayout>